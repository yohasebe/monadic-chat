# frozen_string_literal: true

source "https://rubygems.org"

# Development and testing dependencies for host-side rake tasks
group :development, :test do
  gem "rake"
  gem "rspec"
  gem "rspec-core"
  gem "rubocop", require: false
  gem "dotenv"
end

# Display width calculation for proper terminal table alignment
gem "unicode-display_width", "~> 2.5"
