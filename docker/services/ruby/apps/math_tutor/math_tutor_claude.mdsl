app "MathTutorClaude" do
  display_name MathTutor::DISPLAY_NAME
  description MathTutor::DESCRIPTION
  icon MathTutor::ICON
  
  system_prompt MathTutor::SYSTEM_PROMPT
  
  llm do
    provider "anthropic"
    model "claude-sonnet-4-5-20250929"
    temperature 0.0
  end
  
  features do
    disabled !CONFIG["ANTHROPIC_API_KEY"]
    easy_submit false
    auto_speech false
    initiate_from_assistant true
    image true
    mathjax true
    group "Anthropic"
  end
  
  tools do
    # Import shared Python execution tools (always visible - Phase 1)
    import_shared_tools :python_execution, visibility: "always"

    # Import shared file reading tools (always visible - Phase 1)
    import_shared_tools :file_reading, visibility: "always"
  end
end