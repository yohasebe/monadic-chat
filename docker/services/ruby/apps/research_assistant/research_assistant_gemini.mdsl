app "ResearchAssistantGemini" do
  icon ResearchAssistant::ICON
  description ResearchAssistant::DESCRIPTION
  system_prompt ResearchAssistant::INITIAL_PROMPT

  llm do
    provider "gemini"
    model "gemini-2.5-pro"
  end

  display_name "Research Assistant"

  features do
    disabled !CONFIG["GEMINI_API_KEY"] || !CONFIG["TAVILY_API_KEY"]
    websearch true
    temperature 0.0
    easy_submit false
    auto_speech false
    initiate_from_assistant true  # Add this like Content Reader
    mathjax true
    image true
  end

  tools do
    define_tool "tavily_search", "Search the web for information" do
      parameter :query, "string", "The search query", required: true
      parameter :n, "integer", "Number of results to return (default: 3)", required: false
    end
  end
end
