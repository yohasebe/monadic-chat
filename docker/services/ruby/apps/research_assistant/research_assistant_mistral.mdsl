app "ResearchAssistantMistral" do
  icon ResearchAssistant::ICON
  description ResearchAssistant::DESCRIPTION
  system_prompt ResearchAssistant::INITIAL_PROMPT

  llm do
    provider "mistral"
    model "mistral-large-latest"
  end

  display_name "Research Assistant"

  features do
    disabled !CONFIG["MISTRAL_API_KEY"] || !CONFIG["TAVILY_API_KEY"]
    websearch true
    temperature 0.0
    easy_submit false
    auto_speech false
    mathjax true
    image true
  end

  tools do
  end
end
