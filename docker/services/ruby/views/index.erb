                <option value="vi">Vietnamese</option>
                <option value="cy">Welsh</option>
              </select>
            </div>
          </div>

          <div class="mx-2 me-1" style="display: flex; align-items: center; justify-content: right;">
            <div id="author">
              <span class="text text-secondary"><i class="fa-solid fa-copyright"></i> Yoichiro HASEBE 2025 </span>
            </div>
          </div>
        </div>

        <div id="main" class="col-md-8 order-md-1 scrollable" style="padding-bottom: 20px;">
          <div id="config" class="rounded p-3 shaded-panel">
            <h5 class="pb-0" style="color: #777; margin-top: 0.5em;"><span class="text"><i class="fa-solid fa-bars"></i> Chat Settings</span></h5>


            <form class="row my-2">
              <div class="col-5">
                <label class="form-label" for="apps">Base App</label>
                <div class="select-wrapper">
                  <select class="form-select form-select-sm me-3 select" id="apps">
                  </select>
                </div>
              </div>
              <div class="col-3 ms-2">
                <label class="form-label text-nowrap" for="context-size-toggle">Max Context Size</label>
                <div class="d-flex align-items-center gap-2">
                  <input class="form-check-input mt-0" type="checkbox" id="context-size-toggle" checked="">
                  <input type="number" id="context-size" min="1" max="9999" stop="1" value="100" class="form-control form-control-sm" />
                </div>
              </div>
              
              <div class="col-3 ms-2">
                <label class="form-label text-nowrap" for="max-tokens-toggle">Max Output Tokens</label>
                <div class="d-flex align-items-center gap-2">
                  <input class="form-check-input mt-0" type="checkbox" id="max-tokens-toggle" checked="checked">
                  <input type="number" id="max-tokens" stop="1" min="100" max="999999" value="4000" class="form-control form-control-sm" />
                </div>
              </div>
            </form>

            <form class="row my-3" id="model_and_file">
              <div class="col-5">
                <label for="model" class="form-label text-nowrap">Model</label>
                <select class="form-select form-select-sm me-3" size="1" id="model" ></select>
              </div>

              <div class="col-3 ms-2">
                <label class="form-label text-nowrap" for="reasoning-effort">Reasoning Effort</label>
                <div class="d-flex align-items-center gap-2">
                  <select class="form-select form-select-sm" id="reasoning-effort">
                    <option value="low">low</option>
                    <option value="medium" selected>medium</option>
                    <option value="high">high</option>
                  </select>
                </div>
              </div>

              <div class="col-3 ms-2" id="file-div" style="display: none;">
                <div class="row">
                  <div class="col-auto">
                    <label class="form-label" for="file">PDF → DB</label>
                    <div><button class="btn btn-sm btn-warning text-nowrap" id="file"><i class="fas fa-file"></i> Import File</button></div>
                  </div>
                </div>
              </div>
            </form>

            <form class="row my-3" id="model_parameters">
              <div class="col-3">
                <label for="temperature" class="div-label my-2">Temperature <small><span id="temperature-value">0.3</span></small></label><br />
                <input type="range" class="div-range" min="0.0" max="2.0" step="0.1" value="0.3" id="temperature" style="max-width: 100%;">
              </div>

              <div class="col-3">
                <label for="presence-penalty" class="div-label my-2">Presence Penalty <small><span id="presence-penalty-value">0.0</span></small></label><br />
                <input type="range" class="div-range" min="-2.0" max="2.0" step="0.1" value="0.0" id="presence-penalty" style="max-width: 100%;">
              </div>

              <div class="col-3">
                <label for="frequency-penalty" class="div-label my-2">Frequency Penalty <small><span id="frequency-penalty-value">0.0</span></small></label><br />
                <input type="range" class="div-range" min="-2.0" max="2.0" step="0.1" value="0.0" id="frequency-penalty" style="max-width: 100%;">
              </div>
            </form>

            <div class="row my-3">
              <div id="config-initial-prompt" class="">
                <div style="display:inline-block;" class="form-check form-switch me-3">
                  <label class="form-check-label" for="initial-prompt-toggle">Show Initial Prompt for Assistant</label>
                  <input class="form-check-input" type="checkbox" id="initial-prompt-toggle">
                </div>
                <div style="display:inline-block;" class="form-check form-switch me-3">
                  <label class="form-check-label" for="prompt-caching">Prompt Caching <sup>1</sup></label>
                  <input class="form-check-input" type="checkbox" id="prompt-caching" checked>
                </div>

                <div style="display:inline-block;" class="form-check form-switch me-3">
                  <label class="form-check-label" for="websearch">Web Search <sup>2</sup></label>
                  <input class="form-check-input" type="checkbox" id="websearch">
                </div>

                <div style="display:inline-block;" class="form-check form-switch me-3">
                  <label class="form-check-label" for="mathjax">Math Rendering</label>
                  <input class="form-check-input" type="checkbox" id="mathjax">
                </div>
                <textarea class="form-control form-control-sm" style="resize: vertical;" id="initial-prompt"></textarea>
              </div>
            </div>

            <div class="row my-3">
              <div id="config-ai-user-initial-prompt" class="">
                <div style="display:inline-block;" class="form-check form-switch me-3">
                  <label class="form-check-label" for="ai-user-initial-prompt-toggle">Show Initial Prompt for AI-User</label>
                  <input class="form-check-input" type="checkbox" id="ai-user-initial-prompt-toggle">&nbsp;
                </div>
                <div style="display:inline-block;" class="form-check form-switch me-3">
                  <label class="form-check-label" for="ai-user-toggle">Enable AI-User <sup>3</sup></label>
                  <input class="form-check-input" type="checkbox" value="" id="ai-user-toggle">
                </div>
                <div style="display:inline-block;" class="form-check form-switch me-3">
                  <label class="form-check-label" for="initiate-from-assistant">Start from assistant</label>
                  <input class="form-check-input" type="checkbox" id="initiate-from-assistant">
                </div>
                <textarea class="form-control form-control-sm" style="resize: vertical;" id="ai-user-initial-prompt"></textarea>
              </div>
            </div>

            <div class="row my-3 align-items-center">
              <div class="col-12">
                <fieldset>
                  <legend>Voice Chat Interaction Controls&nbsp;
                    <span id="interaction-check-all" class="mt-2 mb-0 textbox-caption" style="font-weight: 400">
                      check all
                    </span>
                    <span class="mt-2 mb-0 textbox-caption" style="font-weight: 400">
                      /
                    </span>
                    <span id="interaction-uncheck-all" class="mt-2 mb-0 textbox-caption" style="font-weight: 400">
                      uncheck all
                    </span>
                  </legend>
                  <div class="form-check form-switch float-start me-3" id="auto-speech-form">
                    <input class="form-check-input" type="checkbox" id="check-auto-speech">
                    <label class="form-check-label" for="check-auto-speech">Auto speech</label>
                  </div>
                  <div class="form-check form-switch float-start me-3">
                    <input class="form-check-input" type="checkbox" id="check-easy-submit">
                    <label class="form-check-label" for="check-easy-submit">Easy submit <small>(with Enter key or Stop button)</small></label>
                  </div>
                </fieldset>

                <div class="textbox-caption mt-2 mb-0">
                  <sup>1</sup> <code>Prompt Caching</code> is currently controllable only for the Anthropic Claude models. 
                </div>
                <div class="textbox-caption mt-0 mb-0">
                  <sup>2</sup> <code>Web Search</code> takes effect when Tavily API Key is set in the settings.
                </div>
                <div class="textbox-caption mt-0 mb-0">
                  <sup>3</sup> <code>AI-User</code> feature can only be enabled if <code>Start from assistant</code> is disabled
                </div>

              </div>
            </div>

            <div class="row my-3">
              <div id="config-initial-prompt" class="">
                <div class="form-check form-switch">
                  <label class="form-check-label" for="auto-scroll-toggle">Auto scroll while streaming</label>
                  <input class="form-check-input" type="checkbox" id="auto-scroll-toggle" checked>
                </div>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-2">
                <button id="start" class="btn btn-sm btn-primary text-nowrap" disabled="disabled"><i class="fas fa-rocket"></i> <span id="start-label">Start Session</span></button>
              </div>
            </div>
          </div>

          <div id="main-panel" class="rounded p-3 shaded-panel" style="display :none;">
            <h5 class="pb-0 mb-0" style="color: #777; margin-top: 0.5em;"><span class="text"><i class="fas fa-comments"></i> Dialog</span></h5>
            <div id="discourse" style="width: 100%; border: 0xp; overflow-y: auto; display: none;"></div>

            <div id="temp-card" class="card mt-3" style="display:none;">
              <div class="card-header p-2 ps-3 d-flex align-items-center justify-content-between">
                <div class="fs-5 card-title mb-0">
                  <span class='text-secondary'><i class='fas fa-bars'></i></span>
                  <span class='fw-bold assistant-color'>Assistant</span>
                </div>
                <div class="me-1 text-secondary d-flex align-items-center">
                  <span id="indicator" class="spinner spinner-grow spinner-grow-sm text-warning float-end growing-spinner"></span>
                </div>
              </div>
              <div class="card-body role-assistant pb-0">
                <div id="chat" class="card-text pt-0 color: #333; font-weight: 700"></div>
                <div id="chat-bottom" style="color: transparent;">■</div>
              </div>
            </div>

            <div id="user-panel" class="mt-1">
              <div class="row">
                <div class="col-12 h-25 mt-3">
                  <textarea id="message" class="form-control form-control-sm" style="resize: vertical; margin-bottom: 14px;" rows="4" placeholder="Type your message . . ." ></textarea>
                  <div class="textbox-caption" id="image-used"></div>
                  <div id="image-base64"></div>
                </div>
              </div>

              <div class="row mt-1 mb-2">
                <div class="col-auto">
                  <div class="d-flex align-items-center">
                    <button id="image-file" class="btn btn-sm btn-warning text-nowrap me-2"><i class="fas fa-image"></i> Use Image</button>
                    <button id="doc" class="btn btn-sm btn-warning text-nowrap me-2" ><i class="fa-solid fa-file-arrow-up"></i> Extract from file</button>
                    <button id="url" class="btn btn-sm btn-warning text-nowrap me-2" ><i class="fa-solid fa-globe"></i> Extract from URL</button>
                    <button id="voice" class="btn btn-sm btn-warning text-nowrap me-0" tabindex="1" ><i class="fas fa-microphone"></i> Speech Input</button>
                  </div>
                </div>
              </div>

              <div class="row" mt-1>
                <div class="col-auto d-flex align-items-center">
                  <label class="form-check-lebel me-2" for="select-role">Role</label>
                  &nbsp;
                  <div style="display: inline-block; max-width: 100%;">
                    <span style="font-size: 1.3em; vertical-align: bottom; color: #777;" id="role-icon"><i class="fa-solid fa-face-smile"></i></span>
                  </div>
                  &nbsp;
                  &nbsp;
                  <select id="select-role" class="form-select form-select-sm me-3">
                    <option value="user">User</option>
                    <option value="sample-user">User (to add to past messages)</option>
                    <option value="sample-assistant">Assistant (to add to past messages)</option>
                    <option value="sample-system">System (to provide additional direction)</option>
                  </select>
                </div>
              </div>

              <div class="mt-2 mb-0 textbox-caption" >
                <span>Press <span class="text-secondary"> Send <i class="fas fa-paper-plane"></i></span> button to send your message.</span>
