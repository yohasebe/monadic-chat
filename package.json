{
  "name": "monadic-chat",
  "productName": "Monadic Chat",
  "version": "1.0.0",
  "description": "Launcher application responsible for starting and stopping Monadic Chat",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:mac-x64": "electron-builder --mac --x64",
    "build:win": "electron-builder --win --x64",
    "build:linux-arm64": "electron-builder --linux --arm64",
    "build:linux-x64": "electron-builder --linux --x64",
    "test": "jest --config config/jest/jest.config.js",
    "test:passing": "jest --config config/jest/jest.config.js",
    "test:watch": "jest --config config/jest/jest.config.js --watch",
    "test:coverage": "jest --coverage --config config/jest/jest.config.js",
    "test:no-mock": "cross-env JEST_MODE=no-mock jest --config config/jest/jest.config.js",
    "test:no-mock:watch": "cross-env JEST_MODE=no-mock jest --config config/jest/jest.config.js --watch",
    "lint:deprecated-models": "ruby scripts/lint/check_deprecated_models.rb",
    "lint:docs-links": "ruby scripts/lint/check_docs_links.rb"
  },
  "keywords": [],
  "author": "Yoichiro Hasebe <yohasebe@gmail.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@jest/globals": "^30.2.0",
    "cross-env": "^10.1.0",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.2.0",
    "ws": "^8.17.0"
  },
  "build": {
    "electronVersion": "39.2.5",
    "asar": true,
    "appId": "com.yohasebe.monadic",
    "publish": [
      {
        "provider": "github",
        "owner": "yohasebe",
        "repo": "monadic-chat"
      }
    ],
    "mac": {
      "icon": "icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "Monadic.Chat-${version}-${arch}.${ext}",
      "entitlements": "config/electron/entitlements.mac.plist",
      "entitlementsInherit": "config/electron/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "The microphone is required for voice input."
      },
      "protocols": [
        {
          "name": "Monadic Chat Protocol",
          "schemes": [
            "monadic"
          ]
        }
      ]
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "app/bin",
        "filter": [
          "**/*",
          "!**/.*"
        ]
      },
      {
        "from": "./docker",
        "to": "app/docker",
        "filter": [
          "**/*",
          "!**/.*"
        ]
      },
      {
        "from": "./LICENSE",
        "to": "app/LICENSE"
      },
      {
        "from": "./README.md",
        "to": "app/README.md"
      }
    ],
    "files": [
      "app/**/*",
      "icons/**/*"
    ],
    "afterSign": "scripts/notarize.js",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icons/icon.ico",
      "signtoolOptions": {
        "certificateSubjectName": "Open Source Developer, Yoichiro Hasebe",
        "certificateSha1": "a8d4693b31228d10a9da7c2687f5c565928c2a06"
      },
      "artifactName": "Monadic.Chat.Setup.${version}.${ext}",
      "protocols": [
        {
          "name": "Monadic Chat Protocol",
          "schemes": [
            "monadic"
          ]
        }
      ]
    },
    "nsis": {
      "runAfterFinish": false
    },
    "linux": {
      "icon": "icons/monadic-chat.png",
      "target": [
        "deb",
        "zip"
      ],
      "artifactName": "monadic-chat_${version}_${arch}.${ext}",
      "defaultArch": "x64",
      "protocols": [
        {
          "name": "Monadic Chat Protocol",
          "schemes": [
            "monadic"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-context-menu": "^4.1.1",
    "electron-updater": "^6.6.2"
  },
  "overrides": {
    "semver": "^7.5.3",
    "minimatch": "^9.0.3",
    "js-yaml": "^4.1.1",
    "glob": "^10.5.0"
  }
}
