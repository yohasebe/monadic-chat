{
  "name": "monadic-chat",
  "version": "0.5.1",
  "description": "Launcher application responsible for starting and stopping Monadic Chat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:mac-x64": "electron-builder --mac --x64",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux --x64"
  },
  "keywords": [],
  "author": "Yoichiro Hasebe <yohasebe@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "",
    "dotenv": "^16.4.5",
    "electron": "^27.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "asar": true,
    "appId": "com.yohasebe.monadic",
    "extraResources": [
      {
        "from": "./docker",
        "to": "app/docker",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./LICENSE",
        "to": "app/LICENSE"
      },
      {
        "from": "./README.md",
        "to": "app/README.md"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "mainScreen.js",
      "index.html",
      "menu_icons/**/*"
    ],
    "mac": {
      "icon": "menu_icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "afterSign": "notarize.js",
    "win": {
      "target": "nsis",
      "icon": "menu_icons/icon.ico",
      "certificateSubjectName": "Open Source Developer, Yoichiro Hasebe",
      "certificateSha1": "4F833B9F1030A709A2014DBC64FE12F7E0EAEBCE"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "defaultArch": "x64",
      "icon": "menu_icons/icon.png"
    }
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1"
  },
  "overrides": {
    "semver": "^7.5.3"
  }
}
