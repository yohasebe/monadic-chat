{
  "name": "monadic-chat",
  "productName": "Monadic Chat",
  "version": "1.0.0-beta.1",
  "description": "Launcher application responsible for starting and stopping Monadic Chat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:mac-x64": "electron-builder --mac --x64",
    "build:win": "electron-builder --win --x64",
    "build:linux-arm64": "electron-builder --linux --arm64",
    "build:linux-x64": "electron-builder --linux --x64",
    "test": "jest",
    "test:passing": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "Yoichiro Hasebe <yohasebe@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@eslint/js": "^9.11.1",
    "@jest/globals": "^29.7.0",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "eslint": "^9.11.1",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "build": {
    "asar": true,
    "appId": "com.yohasebe.monadic",
    "publish": [
      {
        "provider": "github",
        "owner": "yohasebe",
        "repo": "monadic-chat"
      }
    ],
    "mac": {
      "icon": "icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": ["dmg", "zip"],
      "artifactName": "Monadic.Chat-${version}-${arch}.${ext}",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "The microphone is required for voice input."
      }
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "app/bin",
        "filter": [
          "**/*",
          "!**/.*"
        ]
      },
      {
        "from": "./docker",
        "to": "app/docker",
        "filter": [
          "**/*",
          "!**/.*"
        ]
      },
      {
        "from": "./LICENSE",
        "to": "app/LICENSE"
      },
      {
        "from": "./README.md",
        "to": "app/README.md"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "webview-preload.js",
      "mainScreen.js",
      "index.html",
      "settings.html",
      "update-progress.html",
      "update-splash.html",
      "icons/**/*"
    ],
    "afterSign": "notarize.js",
    "win": {
      "target": ["nsis", "zip"],
      "icon": "icons/icon.ico",
      "certificateSubjectName": "Open Source Developer, Yoichiro Hasebe",
      "certificateSha1": "a8d4693b31228d10a9da7c2687f5c565928c2a06",
      "artifactName": "Monadic.Chat.Setup.${version}.${ext}"
    },
    "nsis": {
      "runAfterFinish": false
    },
    "linux": {
      "icon": "icons/monadic-chat.png",
      "target": ["deb", "zip"],
      "artifactName": "monadic-chat_${version}_${arch}.${ext}",
      "defaultArch": "x64"
    }
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-context-menu": "^3.6.1",
    "electron-updater": "^6.6.2"
  },
  "overrides": {
    "semver": "^7.5.3",
    "minimatch": "^9.0.3"
  }
}
